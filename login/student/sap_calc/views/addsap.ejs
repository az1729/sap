    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Your custom script -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Function to disable all other event options
            function disableOtherOptions(currentRadio) {
                var allRadios = document.querySelectorAll('input[type="radio"]');
                allRadios.forEach(function (radio) {
                    if (radio !== currentRadio) {
                        radio.disabled = true;
                    }
                });
            }

            // Event listener for radio buttons
            var radioButtons = document.querySelectorAll('input[type="radio"]');
            radioButtons.forEach(function (radio) {
                radio.addEventListener('click', function () {
                    disableOtherOptions(this);
                });
            });

            // Event listener for calculate button
            document.getElementById('calculateButton').addEventListener('click', function () {
                var totalPoints = 0;

                var paperPresentation = document.querySelector('input[name="paper_presentation"]:checked');
                var paperPresentationValue = paperPresentation ? parseInt(paperPresentation.value) : 0;
                totalPoints += paperPresentationValue;
        
                // Project Presentation
                var projectPresentation = document.querySelector('input[name="project_presentation"]:checked');
                var projectPresentationValue = projectPresentation ? parseInt(projectPresentation.value) : 0;
                totalPoints += projectPresentationValue;
        
                // Technomanagerial Event
                var technoManagerialEventParticipation = document.querySelector('input[name="techno_managerial_event_participation"]:checked');
                var eventParticipationValue = technoManagerialEventParticipation ? parseInt(technoManagerialEventParticipation.value) : 0;
                totalPoints += eventParticipationValue;
        
                // Sports and Games
                var sportsParticipation = document.querySelector('input[name="sports_participation"]:checked');
                var sportsParticipationValue = sportsParticipation ? parseInt(sportsParticipation.value) : 0;
                totalPoints += sportsParticipationValue;
        
                // Membership
                var membership = document.querySelectorAll('input[name="membership"]:checked');
                var membershipValue = membership.length > 0 ? Array.from(membership).reduce((acc, curr) => acc + parseInt(curr.value), 0) : 0;
                totalPoints += membershipValue;
        
                // Leadership/Organizing Events
                var leadership = document.querySelectorAll('input[name="leadership"]:checked');
                var leadershipValue = leadership.length > 0 ? Array.from(leadership).reduce((acc, curr) => acc + parseInt(curr.value), 0) : 0;
                totalPoints += leadershipValue;
        
                // Value Added Courses/Online Courses
                var course = document.querySelector('input[name="course"]:checked');
                var courseValue = course ? parseInt(course.value) : 0;
                totalPoints += courseValue;
        
                // Project to Paper/Patent/Copyright
                var project = document.querySelector('input[name="project"]:checked');
                var projectValue = project ? parseInt(project.value) : 0;
                totalPoints += projectValue;
        
                // GATE/CAT/Govt Exams
                var exam = document.querySelector('input[name="exam"]:checked');
                var examValue = exam ? parseInt(exam.value) : 0;
                totalPoints += examValue;
        
                // Placement and Internship
                var placement = document.querySelector('input[name="placement"]:checked');
                var placementValue = placement ? parseInt(placement.value) : 0;
                totalPoints += placementValue;
        
                // Entrepreneurship
                var entrepreneurship = document.querySelectorAll('input[name="entrepreneurship"]:checked');
                var entrepreneurshipValue = entrepreneurship.length > 0 ? Array.from(entrepreneurship).reduce((acc, curr) => acc + parseInt(curr.value), 0) : 0;
                totalPoints += entrepreneurshipValue;
        
                // Social Activities
                var socialActivity = document.querySelectorAll('input[name="social_activity"]:checked');
                var socialActivityValue = socialActivity.length > 0 ? Array.from(socialActivity).reduce((acc, curr) => acc + parseInt(curr.value), 0) : 0;
                totalPoints += socialActivityValue;

                document.getElementById("totalPoints").innerHTML = "Total Points: " + totalPoints;

                // Display institution name if provided
                var institutionName = '';
                var institutionName1 = document.getElementById('institution_name_1');
                var institutionName2 = document.getElementById('institution_name_2');
                var institutionName3 = document.getElementById('institution_name_3');
                var institutionName4 = document.getElementById('institution_name_4');

                if (institutionName1 && institutionName1.value.trim() !== '') {
                    institutionName = institutionName1.value;
                } else if (institutionName2 && institutionName2.value.trim() !== '') {
                    institutionName = institutionName2.value;
                } else if (institutionName3 && institutionName3.value.trim() !== '') {
                    institutionName = institutionName3.value;
                } else if (institutionName4 && institutionName4.value.trim() !== '') {
                    institutionName = institutionName4.value;
                }

                if (institutionName !== '') {
                    document.getElementById('institutionNameDisplay').innerHTML = "Institution Name: " + institutionName;
                } else {
                    document.getElementById('institutionNameDisplay').innerHTML = "";
                }

                // Display club/association name if provided
                var clubAssociationName = document.getElementById('club_name').value.trim();
                if (clubAssociationName !== '') {
                    document.getElementById('clubAssociationNameDisplay').innerHTML = "Club/Association Name: " + clubAssociationName;
                } else {
                    document.getElementById('clubAssociationNameDisplay').innerHTML = "";
                }

                // Display proof file name
                var proofFile = document.querySelector('input[name="proof"]');
                var proofFileName = proofFile ? proofFile.files.value : ' ';   
                if (proofFileName !== '') {
                    document.getElementById('proofFileNameDisplay').innerHTML = "Proof File Name: " + proofFileName;
                } else {
                    document.getElementById('proofFileNameDisplay').innerHTML = "";
                }
            });
        });
    </script>

